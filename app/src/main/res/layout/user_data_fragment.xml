<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:style="http://schemas.android.com/tools"
    android:orientation="vertical">

    <com.xuexiang.xui.widget.actionbar.TitleBar
        android:id="@+id/user_data_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tb_barHeight="70dp"
        app:tb_titleText="用户数据"
        app:tb_titleTextSize="25dp"
        app:tb_useThemeColor="true" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/user_data_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" />

    <com.xuexiang.xui.widget.button.ButtonView
        android:id="@+id/user_data_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="点击刷新数据"
        style="@style/ButtonView.Blue"
        android:textColor="@color/white"
        android:textSize="25dp" />

</LinearLayout>