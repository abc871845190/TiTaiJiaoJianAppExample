<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.xuexiang.xui.widget.actionbar.TitleBar
        android:id="@+id/home_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tb_barHeight="70dp"
        app:tb_leftImageResource="@mipmap/title_left"
        app:tb_titleText="@string/navigation_home"
        app:tb_titleTextSize="25dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/home_button"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:clickable="true"
                android:gravity="center"
                android:text="此处为点击动画" />

            <TextView
                android:id="@+id/home_button_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/home_button_not_message" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/home_button_click_message"
                android:textSize="35dp" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>