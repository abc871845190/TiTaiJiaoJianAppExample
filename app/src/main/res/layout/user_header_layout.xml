<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/blue">

    <ImageView
        android:id="@+id/user_item_top_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:scaleType="fitXY"
        android:src="@mipmap/user_item_top" />

    <TextView
        android:id="@+id/user_item_top_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/user_item_top_icon"
        android:text="@string/top_user_name"
        android:textColor="@color/dark"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/user_item_top_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@id/user_item_top_icon"
        android:text="xxxx:xxxx:xxxx"
        android:textColor="@color/dark"
        android:textSize="20dp" />


</RelativeLayout>